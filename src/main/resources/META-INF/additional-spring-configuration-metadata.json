{
  "groups": [
    {
      "name": "quick.auth.base",
      "type": "plus.extvos.auth.config.QuickAuthConfig",
      "sourceType": "plus.extvos.auth.config.QuickAuthConfig",
      "description": "基础认证配置."
    }
  ],
  "properties": [
    {
      "name": "quick.auth.base.secret",
      "type": "java.lang.String",
      "defaultValue": "quick",
      "description": "内部加扰密钥."
    },
    {
      "name": "quick.auth.base.salt-required",
      "type": "java.lang.Boolean",
      "description": "登录密码是否需要加盐加扰",
      "defaultValue": false
    },
    {
      "name": "quick.auth.base.captcha-required",
      "type": "java.lang.Boolean",
      "description": "登陆时是否需要验证码",
      "defaultValue": false
    },
    {
      "name": "quick.auth.base.register-allowed",
      "type": "java.lang.Boolean",
      "description": "是否允许注册用户",
      "defaultValue": false
    },
    {
      "name": "quick.auth.base.phone-required",
      "type": "java.lang.Boolean",
      "description": "是否需要绑定手机号码",
      "defaultValue": false
    },
   {
     "name": "quick.auth.base.sms-code-length",
     "type": "java.lang.Integer",
     "description": "手机验证码长度",
     "defaultValue": 6
   }
  ]
}